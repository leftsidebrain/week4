<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Blog</title>
    <link rel="stylesheet" href="../assets/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="../assets/css/blog.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-info mb-5">
      <div class="container-fluid ms-4 me-4">
        <a class="navbar-brand" href="/"> <img src="assets/img/1546058-middle-removebg-preview2.png" style="width: 20px; object-fit: cover" alt="" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/blog">My Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/testimonial">Testimonial</a>
            </li>
          </ul>
          {{#if isLogin}}
            <p class="me-5 mt-3">Welcome, {{user.name}}</p>
            <a href="/logout"><button class="btn btn-danger me-2">Logout</button></a>
          {{else}}
            <a href="/login"><button class="btn btn-danger me-2">Login</button></a>
            <a href="/register"><button class="btn btn-danger me-2">Register</button></a>
          {{/if}}
          <a href="/contact"> <button class="btn" type="button">Contact</button></a>
        </div>
      </div>
    </nav>
    <div class="blog">
      <div class="blog-form">
        <div class="container-lg w-50">
          <form method="post" action="/add-blog">
            <h1 class="text-center">Add My Project</h1>
            <div class="non-box">
              <div class="input-grup mb-3">
                <label class="form-label">Project Name</label>
                <input type="text" id="inputName" class="form-control" name="name" />
              </div>
              <div class="row">
                <div class="col-lg-6">
                  <label class="form-label">Start Date</label>
                  <input type="date" id="inputStartDate" class="form-control" name="startDate" />
                </div>
                <div class="col-lg-6">
                  <label class="form-label">End Date</label>
                  <input type="date" id="inputEndDate" class="form-control" name="endDate" />
                </div>
              </div>
              <div>
                <label class="form-label">Description</label>
                <textarea class="form-control" id="inputDescription" rows="5" name="content"></textarea>
              </div>
            </div>
            <label class="form-label">Tecnology</label>
            <div class="row mb-3">
              <div class="col-lg-6">
                <input class="form-check-input" type="checkbox" id="inputNodeJs" name="nodeJs" />
                <label class="form-label" for="">Node Js</label>
              </div>
              <div class="col-lg-6">
                <input class="form-check-input" type="checkbox" id="inputReactJs" name="reactJs" />
                <label class="form-label" for="inputReactJs">React Js</label>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-lg-6">
                <input class="form-check-input" type="checkbox" id="inputNextJs" name="nextJs" />
                <label class="form-label" for="inputNextJs">Next Js</label>
              </div>
              <div class="col-lg-6">
                <input class="form-check-input" type="checkbox" id="inputTypescript" name="typescript" />
                <label class="form-label" for="inputTypescript">Typescript</label>
              </div>
            </div>
            <div class="mb-3">
              <div>
                <label class="form-label" for="">Upload file</label>
                <input class="form-control" type="file" id="inputFile" name="image" />
              </div>
            </div>
            <div class="text-end mb-5">
              <button class="btn btn-success">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>