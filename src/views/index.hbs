<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="assets/css/style.css" />
    <title>Document</title>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-info mb-5">
      <div class="container-fluid ms-4 me-4">
        <a class="navbar-brand" href="/"> <img src="assets/img/1546058-middle-removebg-preview2.png" style="width: 20px; object-fit: cover" alt="" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/blog">Add Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/testimonial">Testimonial</a>
            </li>
          </ul>
          {{#if isLogin}}
            <span class="navbar-text me-5 text-white">Welcome, {{user.name}}</span>
            <a href="/logout"><button class="btn btn-danger me-2">Logout</button></a>
          {{else}}
            <a href="/login" style="text-decoration: none;"><button class="btn btn-danger me-2">Login</button></a>
            <a href="/register" style="border: none;"><button class="btn btn-danger me-2">Register</button></a>
          {{/if}}
          <a href="/contact"> <button class="btn" id="btn-contact" type="button">Contact</button></a>
        </div>
      </div>
    </nav>

    <div class="container-lg">
      <div class="card w-75 p-4 bg-light border-5 border-info shadow-lg mx-auto">
        <div class="row g-1 justify-content-around">
          <div class="col-md-5 align-self-center">
            <div class="card-body">
              <h5 class="card-title">Card title</h5>
              <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
              <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
            </div>
          </div>
          <div class="col-md-auto text-center">
            <img src="assets/img/ddszdnf-d376361c-a053-462a-b495-16a58c56716a.png" class="img-fluid rounded" alt="..." style="height: 200px" />
            <p class="bg-light rounded">Fullstack Dev</p>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid mt-5" style="background-color: rgb(238, 238, 238);">
      <h1 class="text-center p-5">MY PROJECT</h1>
      <div class="container-lg p-3 d-flex flex-wrap justify-content-evenly">
        {{#each data}}
          <div class="card p-3 w-30 mb-5 shadow-lg" style="width: 23rem;">
            <img
              src="/uploads/{{image}}"
              class="card-img-top"
              style="height: 250px;
            object-fit: cover;"
            />
            <div class="card-body">
              <h5 class="card-title"><a style="text-decoration: none;font-size: 30px; color: orangered; font-weight: bold;" href="/blog-detail/{{id}}">{{title}}</a></h5>
              <p class="card-text">Durasi {{durasi}} </p>
              <p class="card-text">{{content}}</p>
              <div class="mb-3 justify-content-start d-flex" style="font-size: 20px; height: 25px;">
                {{#if nodejs}}
                  <i class="fa-brands fa-node-js me-3"></i>{{/if}}
                {{#if reactjs}} <i class="fa-brands fa-react me-3"></i>{{/if}}
                {{#if nextjs}}<i class="fa-brands fa-jsfiddle me-3"></i>{{/if}}
                {{#if typescript}}<i class="fa-solid fa-scroll me-3"></i>{{/if}}
              </div>
              {{#if isLogin}}
                <div class="row justify-content-around">
                  <a href="/edit-blog/{{id}}" class="btn btn-primary col-5">Edit Post</a>
                  <a href="/delete/{{id}}" class="btn btn-danger col-5">Delete Post</a>
                </div>
              {{/if}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
    <script>
    </script>
  </body>

</html>