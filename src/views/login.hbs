<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Blog</title>
    <link rel="stylesheet" href="../assets/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="../assets/css/blog.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-info mb-5">
      <div class="container-fluid ms-4 me-4">
        <a class="navbar-brand" href="/"> <img src="assets/img/1546058-middle-removebg-preview2.png" style="width: 20px; object-fit: cover" alt="" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/blog">My Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/testimonial">Testimonial</a>
            </li>
          </ul>
          {{#if isLogin}}
            <p>Welcome, {{user.name}}</p>
            <a href="/logout"><button class="btn btn-danger me-2">Logout</button></a>
          {{else}}
            <a href="/login"><button class="btn btn-danger me-2">Login</button></a>
            <a href="/register"><button class="btn btn-danger me-2">Register</button></a>
          {{/if}}
          <a href="/contact"> <button class="btn" type="button">Contact</button></a>
        </div>
      </div>
    </nav>

    <div class="container-lg">
      <div class="form w-50 d-flex flex-column mx-auto">
        <h1 class="text-center">Login</h1>
        {{#if messages.danger}}
          <div class="alert alert-danger" role="alert">
            <div class="container-fluid text-center">
              {{messages.danger}}
            </div>
          </div>
        {{/if}}
        {{#if messages.success}}
          <div class="alert alert-success" role="alert">
            <div class="container-fluid text-center">
              {{messages.success}}
            </div>
          </div>
        {{/if}}
        <form action="/login" method="POST">
          <label for="" class="form-label">Email</label>
          <input type="email" class="form-control" name="email" />
          <label for="" class="form-label">Passowrod</label>
          <input type="password" class="form-control" name="password" />
          <div class="text-end">

            <button type="submit" class="btn btn-secondary">Submit</button>
          </div>
        </form>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>